@inherits BlazorClock.Model.TickerModel

@if (ShowIcon)
{
    <div style="float:left; margin-right:1em;">
        <span class="oi oi-clock mr-2" aria-hidden="true"></span>
        @if (AutoTitle || !string.IsNullOrWhiteSpace(Title))
        {
            <strong>@Title</strong>
        }

        <span class="text-nowrap">
            @Data
        </span>
    </div>
}
else
{
  <div class="main" style="height:@(Height)px;width:@(Width)px;">
      <div class="clockbox">
          <svg id="clock" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 600" preserveAspectRatio="xMidYMid meet">
              <g id="face">
                  <circle class="circle" cx="300" cy="300" r="253.9" />
                  <path class="hour-marks" d="M300.5 94V61M506 300.5h32M300.5 506v33M94 300.5H60M411.3 107.8l7.9-13.8M493 190.2l13-7.4M492.1 411.4l16.5 9.5M411 492.3l8.9 15.3M189 492.3l-9.2 15.9M107.7 411L93 419.5M107.5 189.3l-17.1-9.9M188.1 108.2l-9-15.6" />
                  <circle class="mid-circle" cx="300" cy="300" r="16.2" />
              </g>
              <g id="hour" style="transform: rotate(@(hourRotation)deg);">
                  <path class="hour-arm" d="M300.5 298V142" />
                  <circle class="sizing-box" cx="300" cy="300" r="253.9" />
              </g>
              <g id="minute" style="transform: rotate(@(minuteRotation)deg);">
                  <path class="minute-arm" d="M300.5 298V67" />
                  <circle class="sizing-box" cx="300" cy="300" r="253.9" />
              </g>
              <g id="second" style="transform: rotate(@(secondRotation)deg);">
                  <path class="second-arm" d="M300.5 350V55" />
                  <circle class="sizing-box" cx="300" cy="300" r="253.9" />
              </g>
          </svg>
      </div>
  </div>
}

