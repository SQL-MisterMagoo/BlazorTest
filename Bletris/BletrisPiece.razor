@inherits BletrisPieceModel

@if (DisplayOnly)
{
    <svg id="Id"
         width="Piece.Tetris.Width"
         height="Piece.Tetris.Height"
         viewBox="0 0 @Piece.Tetris.Width @Piece.Tetris.Height">
        @foreach (var item in Piece.Tetris.Geos)
        {
            <rect stroke-width="1" stroke="#000000" id="bletrisbox" height="32" width="32" fill="Piece.Tetris.Colour" x="(item.x * 32)" y="(item.y * 32)"></rect>
        }
    </svg>
}
else
{
    <svg id="Id"
         width="Piece.Tetris.Width"
         height="Piece.Tetris.Height"
         viewBox="0 0 @Piece.Tetris.Width @Piece.Tetris.Height"
         style="grid-area: @Piece.Position.y / @Piece.Position.x ;"
         tabindex="-1"
         >
        @foreach (var item in Piece.Tetris.Geos)
        {
            <rect stroke-width="1" stroke="#000000" id="bletrisbox" height="32" width="32" fill="Piece.Tetris.Colour" x="(item.x * 32)" y="(item.y * 32)"></rect>
        }
    </svg>
}
